# PDF Receipt Generator - Environment Configuration
# Copy this file to .env for local development

# Application Configuration
REACT_APP_NAME="PDF Receipt Generator"
REACT_APP_VERSION="1.0.0"
REACT_APP_DESCRIPTION="Client-side PDF receipt/invoice generator"

# Storage Configuration (SessionStorage Limits)
REACT_APP_STORAGE_BUDGET=6656
REACT_APP_ENTERPRISE_MAX_SIZE=2048
REACT_APP_TEMPLATES_MAX_SIZE=3072
REACT_APP_INVOICE_MAX_SIZE=1024
REACT_APP_PDF_CACHE_MAX_SIZE=512
REACT_APP_MAX_TEMPLATES=10

# Logo Processing Configuration
REACT_APP_LOGO_MAX_SIZE=1048576
REACT_APP_LOGO_MAX_WIDTH=200
REACT_APP_LOGO_MAX_HEIGHT=200
REACT_APP_LOGO_QUALITY=0.8

# PDF Generation Configuration
REACT_APP_PDF_FORMAT="A4"
REACT_APP_PDF_ORIENTATION="portrait"
REACT_APP_PDF_MARGINS_TOP=20
REACT_APP_PDF_MARGINS_RIGHT=20
REACT_APP_PDF_MARGINS_BOTTOM=20
REACT_APP_PDF_MARGINS_LEFT=20

# Currency Configuration
REACT_APP_DEFAULT_CURRENCY="USD"
REACT_APP_SUPPORTED_CURRENCIES="USD,EUR,GBP,CAD,AUD,JPY"

# Feature Flags
REACT_APP_ENABLE_CSV_IMPORT=false
REACT_APP_ENABLE_TEMPLATES=true
REACT_APP_ENABLE_LOGO_UPLOAD=true
REACT_APP_ENABLE_TAX_CALCULATION=true
REACT_APP_ENABLE_BRAND_COLOR_EXTRACTION=true

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENVIRONMENT="development"

# Browser Support Configuration
REACT_APP_MINIMUM_CHROME_VERSION=111
REACT_APP_MINIMUM_FIREFOX_VERSION=128
REACT_APP_MINIMUM_SAFARI_VERSION="16.4"

# Performance Configuration
REACT_APP_AUTO_SAVE_INTERVAL=30000
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_PDF_GENERATION_TIMEOUT=30000

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_ALLOW_EXTERNAL_IMAGES=false

# UI Configuration
REACT_APP_THEME="professional"
REACT_APP_DEFAULT_LANGUAGE="en"
REACT_APP_TOUCH_TARGET_SIZE=44
REACT_APP_ANIMATION_DURATION=300

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
REACT_APP_BUILD_VERSION=$npm_package_version